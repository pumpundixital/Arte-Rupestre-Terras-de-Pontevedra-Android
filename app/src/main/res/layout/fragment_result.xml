<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="org.terrasdepontevedra.petra.ui.adventure.result.ResultFragment">


    <TextView
        android:id="@+id/text_title_dialog"
        fontPath="fonts/Roboto-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/results"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="MissingPrefix" />

    <FrameLayout
        android:id="@+id/layout_results_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.txusballesteros.widgets.FitChart
            android:id="@+id/chart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:animationMode="overdraw"
            app:backStrokeColor="@color/black"
            app:strokeSize="10dp"
            app:valueStrokeColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <FrameLayout
            android:id="@+id/layout_question_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_question_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_question_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_question_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_question_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white" />

        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/btn_retry"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cylinder_blue"
            android:minWidth="90dp"
            android:paddingBottom="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/retry"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/btn_continue"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/cylinder_blue"
            android:minWidth="90dp"
            android:paddingBottom="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/continue_"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </FrameLayout>


    </LinearLayout>


</LinearLayout>

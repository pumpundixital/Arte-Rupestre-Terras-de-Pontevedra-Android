<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_wizard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.wizard.WizardActivity">


    <ImageView
        android:id="@+id/image_wizard_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:contentDescription="@string/icon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close"
        android:tint="@color/colorPrimaryDark"/>

    <org.terrasdepontevedra.petra.ui.views.UnderlinedTextView
        android:id="@+id/text_wizard_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:inputType="textCapWords"
        android:gravity="top|center"
        fontPath="fonts/Roboto-Medium.ttf"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:underlineColor="@color/blue_dark"
        app:underlineWidth="3dp"/>


    <TextView
        android:id="@+id/text_wizard_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="18sp"
        android:textColor="@color/grey_dark"/>

</LinearLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="org.terrasdepontevedra.petra.ui.help.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.daasuu.bl.BubbleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="60dp"
            android:layout_weight="1"
            android:minHeight="80dp"
            android:padding="8dp"
            app:bl_arrowDirection="right"
            app:bl_arrowHeight="8dp"
            app:bl_arrowPosition="16dp"
            app:bl_arrowWidth="8dp"
            app:bl_bubbleColor="@color/white_light"
            app:bl_cornersRadius="6dp"
            app:bl_strokeColor="@color/blue_dark"
            app:bl_strokeWidth="1dp">


            <com.hanks.htextview.typer.TyperTextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:charIncrease="3"
                app:typerSpeed="50"/>


        </com.daasuu.bl.BubbleLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:text="@string/me"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daasuu.bl.BubbleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="110dp"
                android:layout_marginStart="10dp"
                android:minHeight="90dp"
                android:padding="8dp"
                app:bl_arrowDirection="bottom"
                app:bl_arrowHeight="8dp"
                app:bl_arrowPosition="16dp"
                app:bl_arrowWidth="8dp"
                app:bl_bubbleColor="@color/white_light"
                app:bl_cornersRadius="6dp"
                app:bl_strokeColor="@color/blue_dark"
                app:bl_strokeWidth="1dp">


                <com.hanks.htextview.typer.TyperTextView
                    android:id="@+id/tv_petra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:charIncrease="3"
                    app:typerSpeed="50"/>


            </com.daasuu.bl.BubbleLayout>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="110dp"
                android:contentDescription="@string/icon"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_arrow_drop_down"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/btn_next"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_blue">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/white"/>
            </FrameLayout>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="330dp"
                android:contentDescription="@string/icon"
                android:gravity="bottom"
                android:src="@drawable/petra"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
